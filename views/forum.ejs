            </select>
            <button id="submit-post"><i class="fas fa-paper-plane"></i> Post</button>
        </div>
    </div>
    <div id="story-modal" class="modal">
        <div class="modal-content">
            <span class="close">Ã—</span>
            <h2>Add Story</h2>
            <input type="file" id="story-image" accept="image/*">
            <button id="submit-story"><i class="fas fa-camera"></i> Share Story</button>
        </div>
    </div>
    <div id="settings-modal" class="modal">
        <div class="modal-content">
            <span class="close">Ã—</span>
            <h2>Settings</h2>
            <h3>Theme</h3>
            <label for="theme-select">Select Theme:</label>
            <select id="theme-select">
                <option value="light">Light</option>
                <option value="dark">Dark</option>
            </select>
            <button id="save-settings"><i class="fas fa-save"></i> Save</button>
        </div>
    </div>
    <div id="friend-modal" class="modal">
        <div class="modal-content">
            <span class="close">Ã—</span>
            <h2>Add Friend</h2>
            <input type="text" id="friend-username" placeholder="Enter username">
            <button id="submit-friend"><i class="fas fa-user-plus"></i> Add Friend</button>
        </div>
    </div>
    <div id="group-modal" class="modal">
        <div class="modal-content">
            <span class="close">Ã—</span>
            <h2>Manage Groups</h2>
            <input type="text" id="group-name" placeholder="Enter group name">
            <button id="create-group"><i class="fas fa-users"></i> Create Group</button>
            <button id="join-group"><i class="fas fa-user-friends"></i> Join Group</button>
        </div>
    </div>
    <div id="switch-user-modal" class="modal">
        <div class="modal-content">
            <span class="close">Ã—</span>
            <h2>Switch User</h2>
            <input type="text" id="switch-username" placeholder="Enter username">
            <button id="submit-switch-user"><i class="fas fa-user"></i> Switch</button>
        </div>
    </div>
    
